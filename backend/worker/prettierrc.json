{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
        {
            "files": "*.{js,jsx}",
            "options": {
                "singleQuote": true,
                "jsxSingleQuote": true
            }
        },
        {
            "files": "*.{ts,tsx}",
            "options": {
                "singleQuote": true,
                "jsxSingleQuote": true
            }
        }
    ]
}